# Server Configuration
NODE_ENV=development
PORT=5000
# Base URL for email links (REQUIRED for production)
BASE_URL=http://localhost:5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/qr-access-system

# JWT Secret (change this in production)
JWT_SECRET=your-super-secret-jwt-key-here

# AWS Configuration (optional for local development)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# Email/SMTP (Production example shown; adjust for Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
SMTP_HOST=smtp.gmail.com
# For Gmail: 587 with STARTTLS (secure=false) or 465 with implicit TLS (secure=true)
# In production, 465 is often more reliable on some hosts
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_ENABLED=true